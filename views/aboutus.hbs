<style>
* {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
}

body {
    font-family: "Oswald", sans-serif;
    font-optical-sizing: auto;
    
    font-style: normal;
    background-color: #111;
    color: #f1f1f1;
    line-height: 1.6;
    padding: 20px;
}

header h1 {
    text-align: center;
    font-size: 2.5em;
    margin-bottom: 20px;
    color: #f1675c;
}

.about-section {
    max-width: 800px;
    margin: 0 auto;
    padding: 20px;
    background-color: #222;
    border-radius: 10px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
}

section {
    margin-bottom: 30px;
}

h2 {
    font-size: 1.8em;
    color: #f1675c;
    margin-bottom: 10px;
}

p {
    font-size: 1em;
    margin-bottom: 15px;
}

ul {
    list-style-type: none;
    padding-left: 20px;
}

ul li {
    margin-bottom: 10px;
    padding-left: 10px;
    position: relative;
}

ul li::before {
    content: "•";
    color: #f1675c;
    font-size: 1.5em;
    position: absolute;
    left: -20px;
    top: -2px;
}

strong {
    color: #f1c40f;
}

@media (max-width: 600px) {
    body {
        padding: 10px;
    }

    header h1 {
        font-size: 2em;
    }

    h2 {
        font-size: 1.5em;
    }

    p, ul li {
        font-size: 0.9em;
    }
}
</style>
