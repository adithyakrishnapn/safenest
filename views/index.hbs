        <script>
            async function sendSOS() {
                try {
                    // Send a POST request to the /sos endpoint
                    const response = await fetch('/sos', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({ message: "SOS! I need help immediately!" })
                    });

                    // Parse the JSON response
                    const data = await response.json();

                    // Check if the message was sent successfully
                    if (data.success) {
                        alert('SOS message sent successfully!');
                    } else {
                        alert('Failed to send SOS message.');
                    }
                } catch (error) {
                    console.error('Error sending SOS:', error);
                    alert('An error occurred while sending the SOS message.');
                }
            }
        </script>








